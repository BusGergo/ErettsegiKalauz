@page "/"
@using SapiProjekt.Models
@using SapiProjekt.Services
@inject BacLoaderService BacService

<h3>Bac Results Viewer</h3>

<label>Select Year:</label>
<select class="form-select mb-3" @onchange="OnYearChanged">
    @foreach (var year in years)
    {
        <option value="@year" selected="@((year == selectedYear) ? "selected" : null)">
            @year
        </option>
    }
</select>

@if (entries != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>School</th>
                <th>County</th>
                <th>Specialization</th>
                <th>Avg</th>
                <th>Passed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in entries)
            {
                <tr>
                    <td>@entry.School</td>
                    <td>@entry.County</td>
                    <td>@entry.Specialization</td>
                    <td>@entry.Avg.ToString("0.00")</td>
                    <td>@(entry.Passed == 1 ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <button class="btn btn-secondary" @onclick="PrevPage" disabled="@(currentPage == 1)">Previous</button>
        <span>Page @currentPage / @totalPages</span>
        <button class="btn btn-secondary" @onclick="NextPage" disabled="@(currentPage == totalPages)">Next</button>
    </div>
}
else
{
    <p>Please select a year.</p>
}

@code {
    private List<string> years = new();
    private List<BacEntry> entries;
    private int currentPage = 1;
    private int pageSize = 50;
    private int totalPages;
    private string selectedYear;

    protected override void OnInitialized()
    {
        years = BacService.AvailableYears;
    }

    private void OnYearChanged(ChangeEventArgs e)
    {
        selectedYear = e.Value.ToString();
        BacService.LoadYear(selectedYear);
        currentPage = 1;
        RefreshPage();
    }

    private void RefreshPage()
    {
        entries = BacService.GetPage(currentPage, pageSize);
        totalPages = BacService.GetTotalPages(pageSize);
    }

    private void NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            RefreshPage();
        }
    }

    private void PrevPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            RefreshPage();
        }
    }
}

